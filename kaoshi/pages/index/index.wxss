/* pages/index/index.wxss */
page{
  font-size: 26rpx;
  background-color: #f6f6f7;
}
.title{
  font-size: 28rpx;
  color: #333;
  padding: 20px 20rpx 20rpx;
}

.nav{
  height:120rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.nav-item{
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  width: 100%;
  text-align: center;
}
.nav-item image{
  width:44rpx;
  margin-top:30rpx;
}
.nav-item text{
  font-size:24rpx;
  color:#333333;
  display: block;
}
.change-identity{
  font-size: 30rpx;
  height: 60rpx;
  line-height: 80rpx;
  padding-left: 40rpx;
  color:#474d5b;
  font-weight: bold;
}
.change-btn{
  float: right;
  margin-right: 40rpx;
  color: #6f7d8f;
  font-size: 26rpx;
}
.line-c{
  height: 34rpx;
  background: linear-gradient(#fcfefe,#e8f9f6);
}
.practice{
  width: 610rpx;
  margin: 60rpx auto 50rpx;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  padding: 0 40rpx;
}
.subject-item{
  padding:58rpx 0 48rpx 0;
  border-bottom: 1px solid #f5f5f5; 
  position: relative;
}
.subject-title{
  margin-bottom: 38rpx;
  font-size: 36rpx; 
  color: #313741;
}
.new{
  display: inline-block;
  width: 70rpx;
  height: 32rpx;
}
.subject-lable image{
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  position: relative;
  bottom: -3rpx;
  margin-right: 12rpx;
}
.subject-lable text{
  color: #6f7d8f;
  font-size: 26rpx;
}
.practice-sign-no{
  width: 90rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  position: absolute;
  right: 25rpx;
  top:50%; 
  margin-top: -15rpx;
  background: #ccd6ec;
  color: #fff;
  font-size: 22rpx; 
}
.practice-sign{
  width: 120rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  position: absolute;
  right: 25rpx;
  top:50%; 
  margin-top: -15rpx;
  background: #3eccb3;
  color: #fff;
  font-size: 22rpx; 
}
.ins{
  display: block;
  width: 15rpx;
  height: 30rpx;
  position: absolute;
  right: 0;
  top:50%;
  margin-top: -12rpx;
}
.lock{
  display: block;
  width: 24rpx;
  height: 32rpx;
  position: absolute;
  right: 40rpx;
  top:50%;
  margin-top: -12rpx;
}
.mask {
  position: absolute;
  z-index: 10;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.6);
  /* display: none; */
} 
.mask1 {
  position: fixed;
  z-index: 10;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.6);
  /* display: none; */
} 
.code-box{
  width: 640rpx;
  background: #fff;
  position: absolute;
  top:300rpx;
  left: 55rpx;
  padding: 40rpx 0;
  border-radius: 20rpx;
  z-index: 101;
}
.mask-title{
  font-size: 36rpx;
  color: #222222;
  line-height:36rpx;
  padding-bottom: 20rpx;
  text-align: center;
}
.mask-tip{
  font-size: 28rpx;
  line-height: 28rpx;
  color: #222222;
  padding-bottom: 30rpx;
  text-align: center;
}
.code{
  width: 240rpx;
  height: 240rpx;
  display: block;
  margin: 0 auto 20rpx;
}
.tip1{
  font-size:24rpx;
  color: #999;
  line-height: 30rpx;
  text-align: center;
}
.mask-btn{
  width: 220rpx;
  height: 70rpx;
  margin: 30rpx auto 0;
  background: #3eccb3;
  border-radius: 70rpx;
  color: #fff;
  font-size: 30rpx;
  line-height: 70rpx;
  text-align: left;
  padding-left: 70rpx;
}
.mask-btn image{
  width: 24rpx;
  height: 12rpx;
  display: inline-block;
  margin-left: 10rpx;
}
.step-box{
  padding: 0 75rpx;
  margin-top: 70rpx;
}
.step-box .left{
  float:left;
  width: 15rpx;

}
.step-box .right{
  margin-left: 35rpx;
}
.step-box .right image{
  width: 100%;
}
.step-title{
  font-size: 24rpx;
  color: #333;
  line-height: 24rpx;
  margin-bottom: 20rpx;
}
.dot{
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background: #3eccb3;
}
.step-line{
  width: 2px;
  
  background: #e5e5e5;
  margin-left: 4rpx;
}
.slide-image{
  width: 100%;
}
.classlist{
  padding:30rpx;
  background: #fff;
  width:630rpx;
  margin: 0 auto 30rpx;
}

.fllessons{
  font-size: 36rpx;
  color:#474d5b;
  font-weight:bold;
  padding-bottom: 20rpx;
}
.class-item{
  padding: 30rpx 0;
  border-bottom: 1px solid #e5e5e5;
  position: relative;
}
.class-item:last-child{
  border-bottom:none;
}
.classname{
  font-size: 34rpx;
  color: #333;
  padding-bottom: 20rpx;
  width: 90%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  height: 80rpx;
}
.lables{color: #999;font-size: 24rpx;}

