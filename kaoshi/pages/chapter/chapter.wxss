/* pages/chapter/chapter.wxss */
page{
  font-size: 26rpx;
}
.top{
  display: flex;
  width: 80%;
  margin: 0 auto;
}
.top-item{
  flex: 1;
  margin: 50rpx 0;
  border-right: 1px solid #e5e5e5;
  text-align: right;
  padding-right:100rpx;
  color: #999;
  font-size: 30rpx;
}
.top-item:last-child{
  border-right:none;
  text-align: left;
  padding-left:100rpx;
  padding-right: 0;
}
.practice{
  width: 610rpx;
  margin: 0 auto 50rpx;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  padding: 0 40rpx;
  border:1px solid #f5f5f5;
}
.subject-item{
  padding:58rpx 0 48rpx 0;
  border-bottom: 1px solid #f5f5f5; 
  position: relative;
}
.subject-title{
  margin-bottom: 38rpx;
  font-size: 36rpx; 
  color: #313741;
}
.subject-lable image{
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  position: relative;
  bottom: -3rpx;
  margin-right: 12rpx;
}
.subject-lable text{
  color: #6f7d8f;
  font-size: 26rpx;
}
.practice-sign-no{
  width: 90rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  position: absolute;
  right: 25rpx;
  top:50%; 
  margin-top: -15rpx;
  background: #ccd6ec;
  color: #fff;
  font-size: 22rpx; 
}
.practice-sign{
  width: 120rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  position: absolute;
  right: 25rpx;
  top:50%; 
  margin-top: -15rpx;
  background: #3eccb3;
  color: #fff;
  font-size: 22rpx; 
}
.ins{
  display: block;
  width: 15rpx;
  height: 30rpx;
  position: absolute;
  right: 0;
  top:50%;
  margin-top: -12rpx;
}
.lock{
  display: block;
  width: 24rpx;
  height: 32rpx;
  position: absolute;
  right: 40rpx;
  top:50%;
  margin-top: -12rpx;
}