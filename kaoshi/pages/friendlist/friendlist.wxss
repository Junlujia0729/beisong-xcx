/* pages/friend/friend.wxss */
.list-item{
  padding: 50rpx 30rpx;
  border-bottom:1px dashed #e5e5e5;

}
.left{
  width: 80rpx;
  height: 80rpx;
  border: 1px solid #e5e5e5;
  float: left;
  border-radius: 50%;
  overflow: hidden;
}
.left image{
  width: 100%;
  height: 100%;
}
.right{
  margin-left: 100rpx;
  position: relative;
}
.nickname{
  font-size: 30rpx;
  color: #333;
  padding-top:6rpx;
  line-height: 30rpx;
}
.right text{
  color: #999;
  font-size: 24rpx;
  line-height: 24rpx;
}
.score{
  position: absolute;
  top: 0;
  right: 0;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  color: #f86645;
  font-weight: bold;
}
.tip{
  font-size: 32rpx;
  padding: 100rpx 0;
  text-align: center;
  color: #f86645;
}
.invit_btn{
  background:#3eccb3;
  margin:32rpx 0;
  color:#fff;
  height:88rpx;
  line-height:88rpx;
  font-size:32rpx;
  text-align:center;
  padding:0 32rpx;
  width:100%;
}