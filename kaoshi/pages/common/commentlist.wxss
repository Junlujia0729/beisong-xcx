/* 评论css */
.commentlist{
  background: #fff;
  padding-top: 30rpx;
  margin-bottom: 120rpx;
}
.comment_item{padding: 30rpx;border-bottom: 1px solid #e5e5e5;}
.u_headimg{width: 60rpx;height: 60rpx;float: left;border-radius: 100%;overflow: hidden;}
.u_headimg image{width: 100%;height: 100%;}
.comment_r{margin-left: 80rpx;}
.u_info{position: relative;}
.u_info .u_name{font-size: 28rpx;color: #333;line-height: 28rpx;padding-bottom: 5rpx;}
.u_info .u_time{font-size: 24rpx;color: #999;line-height: 24rpx;display: inline-block;}
.u_z{
  position: absolute;
  right: 0;top:10rpx;
  font-size: 24rpx;
  color: #999;
}
.u_operation{
  margin-top: 30rpx;
}
.u_like_btn{
  display: inline-block;
}
.u_like_btn .dianzan{
  width: 31rpx;
  height: 29rpx;
  margin-right: 5rpx;
}
.u_like{
  font-size: 24rpx;color: #666;
  background-size:31rpx 29rpx; 
}
.u_reply{
  background: url(http://imgs.52jiaoshi.com/1538207810.png) no-repeat left center;        padding-left: 37rpx;font-size: 24rpx;color: #666;
  background-size:31rpx 29rpx; 
  margin-left: 80rpx;
}
.u_other{
  float: right;
  font-size: 50rpx;
  color: #666;
  font-weight: bold;
  line-height: 30rpx;
}
.comment_content{margin-top: 25rpx;font-size: 28rpx;color: 3333;line-height: 40rpx;}
.comment_r_con{
  margin-top: 30rpx;
  padding: 20rpx;
  background: #f2f5f5;  
}
.comment_r_n{
  font-size: 30rpx;
  color: #333;
  padding-bottom: 10rpx;
}
.comment_r_c{
  font-size: 28rpx;
  color: #999;
}
.nocomment{text-align: center;color: #999;}