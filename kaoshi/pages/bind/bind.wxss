.fix_mask{
  position: fixed;
  z-index: 999;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
}

.father {
  position: absolute;
  left: 0;
  width: 580rpx;
  height: 660rpx;
  background: #fff3e8;
  z-index: 9999;
}
.coup-tit{
  font-size: 36rpx;
  color: #ff830e;
  margin: 40rpx 0 25rpx;
  text-align: center;
}
.coup-con{
  padding: 0 30rpx 30rpx;
}
.coup-con view{
  font-size: 24rpx;
  line-height: 40rpx;
  color: #333;
}
#mobile {
  height: 80rpx;
  line-height: 80rpx;
  width: 70%;
  margin: 0 auto;
  padding-left: 20rpx;
  background: #fff;
  font-size: 30rpx;
}
.resets_line {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: none;
  padding: 0;
  position: relative;
  background: #fff;
}
.resets_line input {
  border: none;
  padding-left: 20rpx;
  display: inline-block;
  width:300rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;

}
.resets_line text {
    position: absolute;
    right:0;
    top:0;
    height: 88rpx;
    width: 170rpx;
    color: #4189F9;
    float: right;
    font-size: 30rpx;
    line-height: 88rpx;
    padding: 0;
    z-index: 9;
    border:none;
}
.resets_line .show{
  color: #666;
  text-align: center;
}
.coup-content{
  position: fixed;
  width: 580rpx;
  height: 620rpx;
  left: 50%;
  top: 50%;
  margin-left: -290rpx;
  margin-top: -310rpx;
  z-index: 9999;
}
.buttons{
  position: absolute;
  z-index: 10001;
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 50rpx;
  bottom: 40rpx;
  left: 0;
  margin-left: 140rpx;
  padding: 0;
  background: #ff830e;
  color: #fff;
}
.buttons image{
  width: 100%;
  height: 100%;
}
.hide{
 display: none;
}
.show{
 display: block;
}

.container {
  display: block;
  padding: 0;
  background: #fff;
}

.line {
  width: 2rpx;
  height: 100%;
  background-color: #ddd;
}

.userinfo .nickname{
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  border: 1px solid #F3F4F6;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
}

.userinfo input{
  display: inline-block;
  vertical-align: middle;
  width: 100%;
}

.footer{
  margin-top: 34rpx;
  background: #3eccb3;
  width: 690rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  font-size: 36rpx;
  border-radius: 10rpx;
}
.tips{
  color:#fc645f;
  font-size:30rpx;
  margin-top:20rpx;
  text-align: center;
}


:-ms-input-placeholder{
