/* pages/detail/detail.wxss */
.swiper-tab{
  position: relative;
  margin:30rpx auto;
  height: 76rpx;
  line-height: 80rpx;
  text-align: center;
  font-weight: bold;
  z-index: 999;
  width: 285rpx;
  border:1px solid #d2d2d2;
  border-radius: 15rpx;
  overflow: hidden;
}
.swiper-tab-item{
  display: inline-block;
  color:#333;
  font-size: 30rpx;
  padding-bottom: 0;
  width: 100%;
}
.swiper-tab .active{
  color:#fff;
  background: #3eccb3;
  position: relative;
  top:-2rpx;
}

.questions_box{
  padding:20rpx 30rpx 50rpx;
}

.footer-btn{
 height: 98rpx;
 line-height: 98rpx;
 position: fixed;
 bottom:0;
 left:0;
 border-top:1px solid #e2e2e2;
 padding: 0 30rpx;
 width: 690rpx;
 z-index: 9;
 background: #fff;
}
.footer-btn .btn-item{
  display: inline-block;
  margin-left: 60rpx;
}
.footer-btn .btn-item.hidden{
  display:none;
}
.footer-btn .btn-item text{
  display: inline-block;
  font-size: 30rpx;
  color: #333;
  margin-left:14rpx;
}
.footer-btn image{
  width: 44rpx;
  height: 44rpx;
  display: inline-block;
  vertical-align: middle;
  position: relative;
  top:-5rpx;
} 
.footer-btn-r{
  float:right;
}
.recite-btn{
  position: fixed;
  right:30rpx;
  bottom:150rpx;
  width: 120rpx;
  height: 120rpx;
  background: url('http://imgs.52jiaoshi.com/1539853659.gif') no-repeat ;
  background-size:100% 100%; 
}
.addcomment{
  width: 100%;
  height: 70rpx;
  text-align: left;
  line-height: 70rpx;
  font-size: 30rpx;
  color: #333;
  border-radius: 30rpx;
  background: #eeefef;
  margin-top: 15rpx;
  display: inline-block;
}
.addcomment text{
  margin-left: 30rpx;
}
.nocomment{text-align: center;color: #999;margin:100rpx 0;font-size: 30rpx;}
.line{height: 20rpx;background: #f2f3f4;}

.Qt{
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin:30rpx 0; 
}
.Qt text{
  width: 6rpx;
  height: 6rpx;
  background: #3eccb3;
  display: inline-block;
  margin: 0 20rpx;
  position: relative;
  top:-6rpx;
}
.questions_box_none{
  text-align: center;color: #999;margin:40rpx 0;font-size: 30rpx;
}