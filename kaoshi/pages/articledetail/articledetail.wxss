@import"../../wxParse/wxParse.wxss";
page{
  font-size: 24rpx;
}
.container {
  padding: 30rpx;
  background: #fff;
}
.title{font-size: 40rpx;
    color: #222;
    line-height: 60rpx;
    padding-bottom: 30rpx;
    font-weight: bold;
}
.date{font-size: 24rpx;color: #999;line-height: 24rpx;padding-bottom: 25rpx;}
.content{font-size: 34rpx;color: #333;line-height: 60rpx;}
.download{display: block;padding:30rpx;border:1px solid #eee;border-radius: 10rpx;margin-top: 50rpx;position: relative;margin-bottom: 20rpx;}
.download image{width: 90rpx;height: 93rpx;position: absolute;right:30rpx;
            top:20rpx;}
.download view{font-size: 34rpx;color: #222;line-height: 34rpx;padding-bottom: 16rpx;width: 530rpx;white-space: nowrap;text-overflow: ellipsis;overflow: hidden;}
.download text{display: block;font-size: 24rpx;line-height: 24rpx;color: #999;}

.lessons{height: 194rpx;border-radius: 10rpx;display: block;width: 100%;position: relative;margin-bottom:20rpx; }
.lessons image{width: 100%;}
.class_sign{padding:0 16rpx;height: 40rpx;line-height: 40rpx;background: #3eccb3;color: #fff;font-size: 24rpx;border-radius: 0 20rpx 20rpx 0;display:inline-block;position: absolute;left:0;top:12rpx;}

.class_video{display: block;width: 100%;height: 324rpx;margin: 30rpx 0;border-radius: 10rpx; text-align: center;line-height: 324rpx; position: relative;margin-bottom: 30rpx;}
.class_video .play_btn{width:112rpx;height: 112rpx;position: absolute;left:50%;top:50%;margin-left:-56rpx;margin-top: -56rpx;}    
.class_video .bag{width: 100%;height: 100%;}