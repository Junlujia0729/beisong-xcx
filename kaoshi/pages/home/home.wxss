/* 弹窗 */
.fix_mask {
  position: fixed;
  z-index: 10;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.6);
} 
.simpledialog {
    position: absolute;
    top:0;
    left:0;
    z-index: 999;
    border-radius: 6rpx;
    width: 100%;
    height: 100%;
}
.close {
    position: absolute;
    width: 56rpx;
    height: 56rpx;
    right:0rpx;
    top:-70rpx;
    z-index: 999;  
}
.content{
    position: absolute;
    width: 520rpx;
    height: 620rpx;
    left:50%;
    top:50%;
    margin-left: -260rpx;
    margin-top: -310rpx;
    z-index: 10;
}
.receive-img{
  width: 164rpx;
  height: 94rpx;
  position: fixed;
  right: 15rpx;
  top:820rpx;
}
.submitformid{
  background: none;
  padding-left:0;
  padding-right:0;
  border-radius:none;
  border:none;
  line-height: 32rpx;
}
.submitformid::after{
  border:none;
}

