page{
  font-size: 24rpx;
}
swiper{
  height: 100%;
}
.swiper-tab{  
    width: 100%;  
    border-bottom: 2rpx solid #eee;  
    text-align: center;  
    padding: 20rpx 0;
    background: #fff;
}  
.swiper-tab-item{ 
  font-size: 30rpx;  
  display: inline-block;  
  width: 49.5%;  
  color: #333;  
  border-right:1px solid #eee;
}  
.swiper-tab-item:last-child{
  border-right:none;  
}
 
.active{color:#3eccb3;}
.article-item{
  padding: 40rpx 30rpx;
  border-bottom: 1px solid #e5e5e5;
}
.title{
  font-size: 34rpx;
  color: #333;
  padding-bottom: 20rpx;
}
.lables{overflow: hidden;color: #999;}
.left{float: left;}
.right{float: right;}

.creatdate,.read-num{margin-right: 20rpx;}


.cityList{
    width: 150rpx;
    background: #f2f3f4;
    float: left;
    min-height: 100%;
    border-right: 1px solid #e5e5e5;
}
#Citylist{
  height: 100%;
  padding-bottom: 90rpx;
}
.cityList .city_item{
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 28rpx;
    color: #333;
    display: block;
    border-bottom: 1px solid #e5e5e5;
}
.cityList text.active{
    color: #3eccb3;
    background: #fff;
}

.table-c{
  margin-left: 160rpx;
}

.regu_item{
  padding:40rpx 30rpx 90rpx 30rpx;
  border-bottom: 10rpx solid rgba(0,0,0,0.1);
  position: relative;
}
.regu_item_2{
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
}
.regu_item_2:last-child{
  border-bottom: none;
  padding-bottom: 0;
}
.regu_item .regu_item_area,.regu_item .regu_item_stat{
  font-size:24rpx;
  color:#999999;
}
.regu_item_stat text.left{
  text-align: left;
}
.regu_item_stat text.right{
  text-align: right;
}
.regu_item .regu_item_title{
  margin-top:14rpx;
  font-size:32rpx;
  color:#333333;
  line-height: 44rpx;
}
.regu_item .regu_item_stat{
  margin-top:10rpx;
}
.regu_item_stat{
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.regu_item_stat text{
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  width: 100%;
  text-align: center;
  color:#999999;
}



