/* pages/vip/vip.wxss */
page{
  background: #fafafa;
}
.top{
  width: 100%;
  height: 116rpx;
  background: url('http://imgs.52jiaoshi.com/1560756133.png') no-repeat center center;
  background-size:100% 100%; 
  padding-top: 108rpx;
}
.title{
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  color: #FFFFFF;
  line-height: 40rpx;
  margin-bottom: 12rpx;
  text-align: center;
}
.tip{
  font-size: 24rpx;
  color: #FFF1B1;
  line-height: 24rpx;
  text-align: center;
}
.bottom_buttons{
  position: fixed;
  bottom:0;
  left:0;
  right:0;
  background-color: #fff;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
}
.bottom_buttons view.w11{
  flex: 1;
  height: 88rpx;
  border-top:1px solid #E5E5E5;
}
.bottom_buttons view.w11 view{
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
}
.bottom_buttons view.w11 .vip{
  width: 560rpx;
  display: inline-block;
  margin-left: 190rpx;
  background: #F87956;
  color: #fff;
}
view.contact_btn_new{
  position:fixed;
  left:0;
  bottom:0;
  width: 190rpx;
  height: 88rpx;
  display: inline-block;
  margin-left: 0;
  background:none !important;
  z-index: 999;
  padding:0 0 0 0;
  background-color:transparent;
  border:none;
  text-align: center;
}
view.contact_btn_new button{
  width: 60rpx;
  height: 40rpx;
  padding: 0;
  background-color:transparent;
  border:none;
  margin: 10rpx auto 0;
  line-height: 50rpx;
}
view.contact_btn_new image{
  width: 36rpx;
  height: 36rpx;
  
}


.mask {
  position: absolute;
  z-index: 10;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.6);
  /* display: none; */
} 
.code-box{
  width: 640rpx;
  background: #fff;
  position: absolute;
  top:300rpx;
  left: 55rpx;
  padding: 40rpx 0;
  border-radius: 20rpx;
  z-index: 101;
}
.mask-title{
  font-size: 36rpx;
  color: #222222;
  line-height:36rpx;
  padding-bottom: 20rpx;
  text-align: center;
}
.mask-tip{
  font-size: 28rpx;
  line-height: 28rpx;
  color: #222222;
  padding-bottom: 30rpx;
  text-align: center;
}
.code{
  width: 240rpx;
  height: 240rpx;
  display: block;
  margin: 0 auto 20rpx;
}
.tip1{
  font-size:24rpx;
  color: #999;
  line-height: 30rpx;
  text-align: center;
}
.mask-btn{
  width: 220rpx;
  height: 70rpx;
  margin: 30rpx auto 0;
  background: #3eccb3;
  border-radius: 70rpx;
  color: #fff;
  font-size: 30rpx;
  line-height: 70rpx;
  text-align: left;
  padding-left: 70rpx;
}
.mask-btn image{
  width: 24rpx;
  height: 12rpx;
  display: inline-block;
  margin-left: 10rpx;
}
.step-box{
  padding: 0 75rpx;
  margin-top: 70rpx;
}
.step-box .left{
  float:left;
  width: 15rpx;

}
.step-box .right{
  margin-left: 35rpx;
}
.step-box .right image{
  width: 100%;
}
.step-title{
  font-size: 24rpx;
  color: #333;
  line-height: 24rpx;
  margin-bottom: 20rpx;
}
.dot{
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background: #3eccb3;
}
.step-line{
  width: 2px;
  background: #e5e5e5;
  margin-left: 4rpx;
}
.img{
  padding: 50rpx 30rpx 0;
}
.img image{
  width: 100%;
}